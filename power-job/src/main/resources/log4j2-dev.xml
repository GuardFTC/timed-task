<?xml version="1.0" encoding="UTF-8"?>
<configuration monitorInterval="5">

    <!-- 变量配置 -->
    <Properties>

        <!-- 定义控制台日志输出格式,自定义日志输出格式 -->
        <property name="SYSTEM_LOG_PATTERN"
                  value="%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight{%-5level}[%thread] %style{%logger{36}}{cyan} : %msg%n"/>
        <property name="CUSTOM_LOG_PATTERN" value="%msg%n"/>

        <!-- 定义日志存储的路径(不要配置相对路径) -->
        <property name="SYSTEM_LOG_PATH" value="C:\Users\86176\Desktop\logs"/>
        <property name="CUSTOM_LOG_PATH" value="C:\Users\86176\Desktop\logs\custom"/>
        <property name="PROJECT_NAME" value="power-job"/>
    </Properties>

    <!-- 定义日志打印器 -->
    <Appenders>

        <!-- 控制台日志打印器 -->
        <console name="CONSOLE_LOG" target="SYSTEM_OUT">
            <PatternLayout pattern="${SYSTEM_LOG_PATTERN}" disableAnsi="false" noConsoleNoAnsi="false"/>
            <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
        </console>

        <!-- info级别日志打印器,同时配置日志滚动策略 -->
        <RollingFile name="INFO_LOG" fileName="${SYSTEM_LOG_PATH}/${PROJECT_NAME}/info.log"
                     filePattern="${SYSTEM_LOG_PATH}/${PROJECT_NAME}/${PROJECT_NAME}-INFO-%d{yyyy-MM-dd}_%i.log.gz">
            <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${SYSTEM_LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
                <SizeBasedTriggeringPolicy size="20MB"/>
            </Policies>
            <DefaultRolloverStrategy max="15"/>
        </RollingFile>

        <!-- warn级别日志打印器,同时配置日志滚动策略 -->
        <RollingFile name="WARN_LOG" fileName="${SYSTEM_LOG_PATH}/${PROJECT_NAME}/warn.log"
                     filePattern="${SYSTEM_LOG_PATH}/${PROJECT_NAME}/${PROJECT_NAME}-WARN-%d{yyyy-MM-dd}_%i.log.gz">
            <ThresholdFilter level="warn" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${SYSTEM_LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
                <SizeBasedTriggeringPolicy size="20MB"/>
            </Policies>
            <DefaultRolloverStrategy max="15"/>
        </RollingFile>

        <!-- error级别日志打印器,同时配置日志滚动策略 -->
        <RollingFile name="ERROR_LOG" fileName="${SYSTEM_LOG_PATH}/${PROJECT_NAME}/error.log"
                     filePattern="${SYSTEM_LOG_PATH}/${PROJECT_NAME}/${PROJECT_NAME}-ERROR-%d{yyyy-MM-dd}_%i.log.gz">
            <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${SYSTEM_LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
                <SizeBasedTriggeringPolicy size="20MB"/>
            </Policies>
            <DefaultRolloverStrategy max="15"/>
        </RollingFile>

        <!-- 客户端自定义日志打印器,同时配置日志滚动策略 -->
        <RollingFile name="CUSTOM_LOG" fileName="${CUSTOM_LOG_PATH}/${PROJECT_NAME}/server.log"
                     filePattern="${CUSTOM_LOG_PATH}/${PROJECT_NAME}/${PROJECT_NAME}-server-%d{yyyy-MM-dd}_%i.log.gz">
            <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${CUSTOM_LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
                <SizeBasedTriggeringPolicy size="20MB"/>
            </Policies>
            <DefaultRolloverStrategy max="15"/>
        </RollingFile>

        <!-- PowerJob日志打印器,同时配置日志滚动策略 -->
        <RollingFile name="POWER_JOB_LOG" fileName="${SYSTEM_LOG_PATH}/${PROJECT_NAME}/power-job.log"
                     filePattern="${SYSTEM_LOG_PATH}/${PROJECT_NAME}/${PROJECT_NAME}-power-job-%d{yyyy-MM-dd}_%i.log.gz">
            <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${SYSTEM_LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
                <SizeBasedTriggeringPolicy size="20MB"/>
            </Policies>
            <DefaultRolloverStrategy max="15"/>
        </RollingFile>
    </Appenders>

    <!-- 定义Loggers(只有定义了logger并引入的appender,appender才会生效) -->
    <Loggers>

        <!-- 过滤掉spring和mybatis的一些无用的DEBUG信息 -->
        <logger name="org.mybatis" level="info" additivity="false">
            <AppenderRef ref="CONSOLE_LOG"/>
        </logger>
        <Logger name="org.springframework" level="info" additivity="false">
            <AppenderRef ref="CONSOLE_LOG"/>
        </Logger>

        <!-- 自定义logger -->
        <Logger name="custom" level="info" additivity="false">
            <AppenderRef ref="CUSTOM_LOG"/>
        </Logger>

        <!-- PowerJobLogger -->
        <logger name="tech.powerjob.worker" level="info" additivity="false">
            <appender-ref ref="POWER_JOB_LOG" />
        </logger>

        <!-- 定义日志打印器logger -->
        <root level="info">
            <appender-ref ref="CONSOLE_LOG"/>
            <appender-ref ref="INFO_LOG"/>
            <appender-ref ref="WARN_LOG"/>
            <appender-ref ref="ERROR_LOG"/>
        </root>
    </Loggers>
</configuration>